%%-*-Erlang-*-
{erl_opts, [debug_info]}.
{deps, [
        {opentelemetry_api, "~> 1.3.0"},
        {opentelemetry_api_experimental, "~> 0.5.1"}
       ]}.

{plugins, [rebar3_fmt]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               deprecated_function_calls, deprecated_functions]}.
{xref_ignores, []}.

%% development setting
{shell, [{config, "priv/dev.config"}]}.
